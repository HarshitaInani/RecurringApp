<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.recurringapp.MainActivity"
    android:background="@drawable/img2"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_firstName_sign_up"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/textboxshape"
                android:hint="First Name"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="@color/textview_text_color"
                android:textColorHint="@color/grey"
                 />

            <EditText
                android:id="@+id/et_lastName_sign_up"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/textboxshape"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textview_text_color"
                android:textColorHint="@color/grey"
                 />
        </LinearLayout>



        <EditText
            android:id="@+id/et_mobile_sign_up"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/textboxshape"
            android:hint="Mobile No."
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="@color/textview_text_color"
            android:textColorHint="@color/grey"

            android:visibility="gone" />

        <EditText
            android:id="@+id/et_emailaddress_sign_up"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/textboxshape"
            android:hint="Email"
            android:layout_marginTop="9dp"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="@color/textview_text_color"
            android:textColorHint="@color/grey"
             />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="9dp"
            app:passwordToggleTint="@color/black">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password_sign_up"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textboxshape"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:inputType="textPassword"
                android:textColor="@color/textview_text_color"
                android:textColorHint="@color/grey" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:id="@+id/LoginPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Already have an account?"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Log in here"
                android:textColor="#5A5A5A"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sing_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sign_up_button_shape"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

</LinearLayout>
</LinearLayout>